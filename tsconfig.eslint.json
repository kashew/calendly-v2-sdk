{
  "compilerOptions": {
    "rootDir": ".",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@": [
        "src"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}