{
  "compilerOptions": {
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "src/*": [ "src/*" ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "test"]
}