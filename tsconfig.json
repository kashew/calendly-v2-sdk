{
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "src/*": [ "src/*" ]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["dist", "node_modules"]
}